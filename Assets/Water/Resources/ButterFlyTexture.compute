    //twiddle.x = k;
    int butterflyspan = int(pow(2, id.x));

    int butterflywing = fmod(id.y, pow(2, id.x+1)) < pow(2, id.x) ? 1 : 0;
    
    if (id.x == 0 ){
        /*
